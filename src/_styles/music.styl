#MusicContainer {
  padding: 10vw;
}
@media tablet {
  #MusicContainer {
    padding: calc(10vw - 30px)
  } 
}
.MusicItem {
  width: 100%;
  margin-bottom: 10vw;
}
@media tablet {
  .MusicItem {
    width: calc(33.3333% - 60px);
    display: inline-block;
    vertical-align: top
    margin: 2vw 30px;
  }
}
@media biggerscreen {
  .MusicItem {
    width: calc(25% - 60px);
    display: inline-block;
    vertical-align: top
    margin: 2vw 30px;
  }
}
.MusicCover {
  width: 100%;
  height: 0px;
  padding-bottom: calc(100% - 3px);
  background-size: cover;
  background-repeat: no-repeat;
  margin-bottom: 10px;
  border: 1px solid rgba(0,0,0, .06);
  border-radius: 0px;
}
@media tablet {
  .MusicCover {
    margin-bottom: 30px;
  }
}
.MusicTitle {
  line-height: 160%;
}