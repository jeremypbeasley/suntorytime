.Projects {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
@media laptop {
  .Projects {
    padding: 0 5vw;
  }
}
.Project {
  margin-bottom: 10vw;
  cursor: pointer;
  width: 100%;
}
@media laptop {
  .Project {
    width: 45%;
  }
}
.ProjectThumbnail {
  width: 100%;
  height: 0px;
  background-size: cover;
  padding-bottom: 75%;
  background-position: center center;
  position: relative;
}
.ProjectThumbnailInside {
  width: calc(100% - 10vw);
  height: calc(100% - 10vw);
  background: rgba(255,255,255,.98);
  position: absolute;
  top: 0px;
  opacity: 0;
  margin: 5vw;
}
@media laptop {
  .ProjectThumbnailInside {
    margin: 2rem;
    width: calc(100% - 4rem);
    height: calc(100% - 4rem);
  }
}
.ProjectThumbnailInside p {
  padding: 5vw;
}
@media laptop {
  .ProjectThumbnailInside p {
    padding: 2rem;
  }
}
.ProjectDetails {
  padding: 5vw;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}
@media laptop {
  .ProjectDetails {
    padding: 1.5rem 0;
  }
}
footer {
