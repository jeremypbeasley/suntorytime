.Intro {
  min-height: calc(100vh - 20vw);
  padding: 10vw;
  margin-bottom: 0vw;
}
@media laptop {
  .Intro {
    padding: 12vw;
    width: 50%;
    margin-bottom: 0;
    min-height: calc(100vh - 24vw);
  }
}
@media biggerscreen {
  .Intro {
    padding: 15vw;
    min-height: calc(100vh - 30vw);
  }
}
.ProfilePhoto {
  width: 100vw;
  height: 124vw;
  background-image: url(https://static1.squarespace.com/static/4f709f8de4b0e97c13ddc57b/54082f77e4b0db5a9ad46b4e/540a7404e4b04c699fc0d928/1409971206582/611A0558-erikotto-vscoartist.jpg?format=2500w);
