iframe {
	display: none;
}
.tmblr-iframe--controls-phone-container {
  padding-top: 0px !important;
}      
.BlogHeader {
  padding: 10vw;
}
.BlogHeader span a {
  color: blue;
  border-color: blue;
}
p.BlogTitle {
  margin: 30px 0px 100px 0;
}
.BlogPost {
  padding: 10vw;
  border-bottom: 1px solid #f2f2f2;
  margin-bottom: 50px;
}
.BlogPost:nth-child(1) {
  padding-top: 0px;
}
@media tablet {
  .BlogPost {
    padding: 10vw;
    max-width: 40rem;
  }
  .BlogPost:nth-child(1) {
    padding: 0 !important;
  }
}
.BlogFooter {
  padding: 10vw;
  padding-bottom: 20vw;
}
