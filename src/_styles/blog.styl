iframe {
	display: none;
}
.tmblr-iframe--controls-phone-container {
  padding-top: 0px !important;
}      
.BlogHeader {
  padding: 10vw;
  padding-bottom: 40vw;
}
@media tablet {
  .BlogHeader {
    padding: 10vw;
  }
}
.BlogHeader span a {
  color: blue;
  border-color: blue;
}
p.BlogTitle {
  margin: 0vw 0 20vw 0;
}
@media tablet {
  p.BlogTitle {
    margin: 0 0 10vw 0;
  }
}
.BlogPost {
  padding: 10vw;
  border-bottom: 1px solid #f2f2f2;
  margin-bottom: 50px;
}
@media tablet {
  .BlogPost {
    margin-bottom: 0px;
  }
}
.BlogPost:nth-child(2) {
  padding-top: 0px;
}
@media tablet {
  .BlogPost {
    padding: 10vw;
    max-width: 50rem;
  }
  .BlogPost:nth-child(2) {
    padding-top: 0 !important;
  }
}
.BlogFooter {
  padding: 10vw;
  padding-bottom: 20vw;
}
@media tablet {
  .BlogFooter {
    padding: 10vw;
    padding-bottom: 10vw;
  }
}